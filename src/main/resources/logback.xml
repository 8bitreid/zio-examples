<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
<!--        <withJansi>fasle</withJansi>-->
        <encoder>
            <pattern>[%highlight(%-5level)] %date %cyan(%logger@[%-4.30thread]) line#%line - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>